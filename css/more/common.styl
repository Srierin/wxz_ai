.container
  max-width 600px 
  margin 0 auto 
  padding 20px
  font-family Arial, sans-serif
 
  h1
    text-align center
  p
    line-height 1.6 // 行高
  .more
     background-color #007bff
     color white
     text-decoration none
     position relative
     transition all .3s ease// 悬停效果过渡
     &::before // 伪元素
       content ""
       position absolute
       bottom 0
       left 0
       width 100%
       height 2px
       background-color red
       transform scaleX(0) // 初始状态
       transform-origin bottom right // 变换原点
       transition transform .3s ease // 过渡效果
     &:hover::before // 悬停状态
       transform scaleX(1) // 变换效果
       transform-origin bottom right  
     


